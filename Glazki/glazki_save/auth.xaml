<Page x:Class="glazki_save.auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:glazki_save"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="auth">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock>Логин</TextBlock>
            <TextBox Name="login"/>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox Name="passwd" Visibility="Collapsed"/>
            <TextBlock Text="Show Password" x:Name="ShowPass" MouseDown="ShowPass_MouseDown" MouseUp="ShowPass_MouseUp"></TextBlock>
            <Button Click="Login" Content="Войти"/>
        </StackPanel>
    </Grid>
</Page>
